@model MVCCourseProject.Models.ChapterViewModel

@{
    ViewBag.Title = "Edit Chapter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="row">Edit Chapter</h2>
<hr />

@using (Html.BeginForm("EditChapter", "Chapter", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(model => model.ID)

    <div class="form-horizontal row col-md-12">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.ChapterName, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChapterName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChapterName, "", new { @class = "text-danger" })
            </div>
        </div>


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.StoryID, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StoryID, (IEnumerable<SelectListItem>)ViewBag.AllStories, new { @class = "form-control" })
            </div>

        </div>


        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.ChapterNum, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ChapterNum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChapterNum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Slug, htmlAttributes: new { @class = "control-label col-md-6" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-6" })
            <div>
                @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12">
            <div>
                <input type="submit" value="Save Chapter" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="row">
    @Html.ActionLink("Back to List", "EditStories", "Stories")
</div>
